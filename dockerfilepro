# Use the official Python image from the Docker Hub
FROM python:3.12

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install Poetry
RUN pip install --upgrade pip \
    && pip install poetry

# Create and set the working directory
WORKDIR /app

# Copy pyproject.toml and poetry.lock to the working directory
COPY pyproject.toml poetry.lock /app/

# Install dependencies
RUN poetry config virtualenvs.create false \
  && poetry install --only main --no-interaction --no-ansi
  

# Copy the rest of the application code to the working directory
COPY . /app 

# 로그 디렉토리 생성 (이 부분 추가)
RUN mkdir -p /app/logs && touch /app/logs/django_error.log && chmod -R 777 /app/logs

# Collect static files 
RUN python django/manage.py collectstatic --noinput --settings=livflow.settings.product

# Expose port 8000
EXPOSE 8000

# Run the application 
CMD ["gunicorn", "livflow.wsgi:application", "--bind", "0.0.0.0:8000"]
